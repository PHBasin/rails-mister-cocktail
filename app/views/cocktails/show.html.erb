  <% if @cocktail.photo.attached? %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, crop: :fill %>')">
  <% else %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(hhttps://loremflickr.com/720/300/<%= @cocktail.name %>)">
  <% end %>
    <h1><%= @cocktail.name %></h1>
  </div>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> - <%= dose.ingredient.name %>
      <%= link_to "x", dose_path(dose), method: :delete, class: 'suppr' %>
    </li>
  <% end %>
</ul>

<div class="container">
  <h2>Add a dose</h2>

  <%= simple_form_for [ @cocktail, @dose ] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %>
    <%= f.submit class: 'btn btn-light' %>
  <% end %>

  <%= link_to "Back to list", cocktails_path, class: 'btn btn-light' %>
</div>

