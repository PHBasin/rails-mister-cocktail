<h1><%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= dose.description %> - <%= dose.ingredient.name %>
      <%= link_to "x", dose_path(dose), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "Add a new dose", new_cocktail_dose_path(@cocktail.id) %>
<%= link_to "Back to list", cocktails_path %>
