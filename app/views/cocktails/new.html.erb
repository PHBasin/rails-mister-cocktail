<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://loremflickr.com/720/300/cocktail)">
  <h1>Add a new cocktail</h1>
</div>

<div class="container">
  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class: 'btn btn-light' %>
  <% end %>
  <%= link_to "Back to list", cocktails_path, class: 'btn btn-light' %>
</div>